{
    "title": "Gitbook-Learning",
    "author": "wklchris",
    "description": "介绍如何使用 Gitbook。",
    "language": "zh-hans",
    "gitbook": "3.2.3",
    "styles": {
        "website": "./styles/website.css"
    },
    "structure": {
        "readme": "README.md"
    },
    "plugins": [
        "-sharing", 
        "-highlight", "prism",
        "-lunr", "-search", "search-pro",
        "splitter",
        "collapsible-menu",
        "katex",
        "github", "github-buttons",
        "tbfed-pagefooter"
    ],
    "pluginsConfig": {
        "theme-default": {
            "showLevel": true
        },
        "github": {
            "url": "https://github.com/wklchris"
        },
        "github-buttons": {
            "buttons": [{
                "user": "wklchris",
                "repo": "Gitbooks",
                "type": "star",
                "size": "small",
                "count": true
                }
            ]
        },
        "tbfed-pagefooter": {
            "copyright":"&copy wklchris",
            "modify_label": "最后修改于：",
            "modify_format": "YYYY-MM-DD"
        }
    }
}
